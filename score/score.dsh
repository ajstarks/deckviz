// NBA scoring
// data format: team1  team2
// ./mkdata input away home

deck
	import "scorechart.dsh"

	bosname="Boston Celtics"
	boslogo="bos.png"
	boscolor="#14834c"

	indname="Indiana Pacers"
	indlogo="ind.png"
	indcolor="#05285f"

	minname="Minnesota Timberwolves"
	minlogo="min.png"
	mincolor="#061d3c"

	dalname="Dallas Mavericks"
	dallogo="dal.png"
	dalcolor="#1563ad"
	
	slide
		scorechart "Eastern Conference Finals, Game 3" bosname indname "114" "111" boslogo indlogo boscolor indcolor "bos.d" "ind.d" "bos-diff.d" boscolor
